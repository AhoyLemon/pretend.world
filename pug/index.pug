- var testing = true
- var siteTitle = "PRETEND 🌐 WORLD"
- var siteURL = ""
- var fPlusURL = false
- var description = ""
- var d = new Date()
- var lastUpdated = d.getFullYear() + '-' + (d.getMonth()<10?'0':'') + d.getMonth() + '-' + (d.getDate()<10?'0':'') + d.getDate() + '@' + (d.getHours()<10?'0':'') + d.getHours() + ':' + (d.getMinutes()<10?'0':'') + d.getMinutes() + ':' + (d.getSeconds()<10?'0':'') + d.getSeconds()

doctype html
html(lang="en")
  head
    include partials/_head.pug
  body

    #app

      if testing == true
        include partials/_debug.pug

      main(v-cloak)

        //- SPECIAL SCREENS
        //- (Introduce Cheese, Game Over You Won, Game Over You Lost)
        .screen.special-screen(v-if="specialScreen.show")
          figure(:style="{ backgroundImage: 'url(' + specialScreen.pic + ')' }")
          figcaption
            .inner.special-feedback
              .status 
                h1.special-headline(v-text="specialScreen.headline")
                p(v-html="specialScreen.message")
                
                .game-over-holder(v-if="specialScreen.gameOver")
                  h2(:class="my.mood") GAME OVER
                .button-holder(v-else-if="specialScreen.type == 'cheese'")
                  button.mission-start(@click="cheeseScreen('hide')" v-focus)
                    span Mission Start

        //- Q&A SCREENS
        .screen.qa-screen(v-else)
          figure.celebrity-photo(:style=" { backgroundImage: 'url('+current.pic+')' } ")
            .button-holder.impersonator-website
              a.button(v-if="phase == 'answer'" @click="visitImpersonatorWebsite()") impersonator website
          figcaption
            include partials/_question.pug
            include partials/_answer.pug

    include partials/_javascripts.pug